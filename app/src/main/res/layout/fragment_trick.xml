<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_primary"
    android:orientation="vertical"
    >

  <com.yqritc.scalablevideoview.ScalableVideoView
      android:id="@+id/trick_preview"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_alignParentTop="true"
      android:background="@android:color/black"
      app:scalableType="centerTop"
      />

  <TextView
      android:id="@+id/trick_hint"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/trick_preview"
      android:gravity="center"
      android:padding="8dp"
      android:text="Touch to pause"
      android:textColor="@color/color_primary_light"
      android:textSize="14sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_below="@id/trick_hint"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/item_trick_done"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_do_24dp"
        />

    <ImageView
        android:id="@+id/item_trick_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_share_24dp"
        />

  </LinearLayout>

</RelativeLayout>